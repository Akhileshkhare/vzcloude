  "jsonStructure": {
    "description": "Complete JSON structure for the Verizon Cloud Dashboard",
    "schema": {
      "header": {
        "type": "object",
        "optional": true,
        "properties": {
          "title": "string - Header title text",
          "logo": "string - 'verizon' for Verizon logo, or custom text/image URL",
          "showBack": "boolean - Show back button"
        }
      },
      "cards": {
        "type": "array",
        "optional": true,
        "description": "Grid of information cards (2 columns)",
        "items": {
          "icon": "string - Emoji or unicode character",
          "image": "string (optional) - Full image URL (overrides icon)",
          "value": "string - Main display value (number, size, status)",
          "label": "string - Description label"
        }
      },
      "actions": {
        "type": "array",
        "optional": true,
        "description": "Action buttons",
        "items": {
          "icon": "string - Emoji or unicode character",
          "image": "string (optional) - Full image URL",
          "text": "string - Button text",
          "type": "string - Action type for handlers",
          "style": "string - 'primary' (red button), 'action' (white button), 'menu' (menu item)",
          "url": "string (optional) - Direct URL to navigate"
        }
      },
      "status": {
        "type": "object",
        "optional": true,
        "description": "Status information section",
        "properties": {
          "title": "string - Section title",
          "items": "array - List of label/value pairs"
        }
      },
      "message": {
        "type": "object",
        "optional": true,
        "description": "Alert/message box",
        "properties": {
          "title": "string - Message title",
          "text": "string - Message content"
        }
      },
      "subscription": {
        "type": "object",
        "optional": true,
        "description": "Subscription alert (same styling as message)",
        "properties": {
          "title": "string - Alert title",
          "text": "string - Alert content"
        }
      },
      "textOnly": {
        "type": "object",
        "optional": true,
        "description": "Text-only content section",
        "properties": {
          "heading": "string - Main heading",
          "paragraphs": "array of strings - Paragraph content"
        }
      },
      "menuItems": {
        "type": "array",
        "optional": true,
        "description": "Menu-style navigation items",
        "items": {
          "icon": "string - Emoji or unicode character",
          "text": "string - Menu item text",
          "type": "string - Action type",
          "url": "string (optional) - Navigation URL"
        }
      }
    }
  },
  "usage": {
    "urlParameter": {
      "description": "Pass JSON data as base64-encoded URL parameter",
      "format": "?data=BASE64_ENCODED_JSON",
      "example": "vz-cloud-dashboard.html?data=eyJoZWFkZXIiOnsidGl0bGUiOiJWZXJpem9uIENsb3VkIn19"
    },
    "apiEndpoint": {
      "description": "Fetch JSON data from API endpoint",
      "format": "?apiUrl=YOUR_API_ENDPOINT",
      "example": "vz-cloud-dashboard.html?apiUrl=https://api.example.com/dashboard"
    }
  }
}
